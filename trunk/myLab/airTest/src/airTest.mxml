<?xml version="1.0" encoding="utf-8"?>
<mx:WindowedApplication xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="600" height="480" initialize="init();">
	<mx:Script>
		<![CDATA[
			private function init():void {
				var ma:mainAct = new mainAct();
				
				btnGoToPage.addEventListener(MouseEvent.CLICK, showPage);
			}
			
			private function showPage(e:MouseEvent):void {
				htmlPage.location = iptUrl.text;
			}
			
			private function pageLoad():void {
				trace(htmlPage.htmlText);
			}
		]]>
	</mx:Script>
	<mx:Canvas x="10" y="10" width="578" height="458" id="wrapper">
		<mx:TabNavigator x="0" y="40" width="450" height="396" id="mainTabs">
			<mx:Canvas label="page" width="100%" height="100%" id="mtabPage">
				<mx:HTML x="0" y="0" width="448" height="363" id="htmlPage" htmlText="test" complete="pageLoad();"/>
			</mx:Canvas>
			<mx:Canvas label="resource" width="100%" height="100%" id="mtabRes">
			</mx:Canvas>
			<mx:Canvas label="mtabTxt" width="100%" height="100%">
			</mx:Canvas>
		</mx:TabNavigator>
		<mx:Label x="0" y="12" text="LINK:"/>
		<mx:TextInput x="43" y="10" width="333" id="iptUrl" text="http://www.google.cn/"/>
		<mx:Button x="384" y="10" label="Go" id="btnGoToPage"/>
	</mx:Canvas>
	
</mx:WindowedApplication>
